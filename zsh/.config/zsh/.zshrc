alias learn='cd ~/code/learn'
alias rm='rm -i'
alias mv='mv -i'
alias ..='cd ..'
alias la='ls -A'
alias neofetch='neofetch --kitty ~/.config/assets/neofetch/045-dracula.svg --size 30%'
