#bindsym $mod+Control+p exec ffmpeg -y -f video4linux2 -s 1280x720 -i /dev/video0 -ss 0:0:1 -frames 1 /tmp/outputphoto.jpg && xclip -selection clipboard -t image/jpg -i /tmp/outputphoto.jpg
bindsym $mod+p exec ffmpeg -y -f video4linux2 -s 1280x720 -i /dev/video0 -ss 0:0:1 -frames 1 ~/Pictures/webcam/"`date +"%Y-%m-%d_%H:%M:%S"`".png

#------------------------------
#   EXEC
#------------------------------

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork   #idon't use i3lock but...idk
exec --no-startup-id nm-applet                                           #idon't use tray too
exec_always --no-startup-id ~/.fehbg &                                   #background
exec_always --no-startup-id killall picom & sleep 0.2 && picom &         #compositor
exec_always --no-startup-id dunst &                                      #notifications
exec_always --no-startup-id ~/.config/polybar/launch.sh                  #status bar
exec --no-startup-id xrdb -load ~/.Xresources                            #load xresources

# IMPORTANT
exec setxkbmap -layout br &                                              #set keymap to br
exec xinput set-prop "Elan Touchpad" "libinput Tapping Enabled" 1 &      #enable tap to click
