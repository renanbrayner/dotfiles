#!/bin/bash
# To add new screenlayouts just create a new script named numberofmonitors.sh

# source functions
. $(dirname "$0")/utils

connectedCount=$(xrandr --query | grep -c " connected")

"$HOME/.screenlayout/$connectedCount.sh"
notify-send.sh "Display configuration done" \
  "Display count: $connectedCount"\
  -a "" \
  --hint string:image-path:video-display\
  --hint int:transient:1

restart_wm
